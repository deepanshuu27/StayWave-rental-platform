<% layout("/layouts/boilerplate") %>
<!-- <%#= success %>  display flash message       added it in boilerplate-->

<style>  

#filters{
    display: flex;
    flex-wrap:wrap;
    align-items: center;
}

.filter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
    text-decoration: none;           /* remove underline from links */
    color: inherit;   /* Inherit text color from parent */
}

.filter:hover{
    opacity: 1;
    cursor:pointer;
}

.filter p{
    font-size: 0.7rem;
}


.tax-info{
    display:none;                                              /* will not occupy space when hidden*/
}

.tax-toggle{

    border: 1px solid black;
    border-radius: 1rem;
    height: 2.8rem;
    padding: 1rem;
    margin-top: 1rem;
margin-left: 1rem;
    display: flex;
    align-items: center;
}

.tax-toggle,.form-check-label,.form-check-input:hover{
    cursor:pointer;
}

</style>
    <!-- <h2>All listings</h2>
    <form method="GET"  action="/listings/new">
        <button> Create New Listing</button>
    </form> -->

    <div id="filters">

        <a href="/listings/filter?category=trending" class="filter">
            <i class="fa-solid fa-person-swimming"></i>
            <p>Trending</p>
         </a>
        
            <a href="/listings/filter?category=rooms" class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </a>
        
            <a href="/listings/filter?category=beach" class="filter">
                <i class="fa-solid fa-umbrella-beach"></i>
                     <p>Beaches</p>
            </a>
        
            <a href="/listings/filter?category=mountain" class="filter">
                <i class="fa-solid fa-mountain"></i>
                <p>Mountains</p>
            </a>
        
            <a href="/listings/filter?category=castle" class="filter">
                <i class="fa-brands fa-fort-awesome"></i>
                <p>Castles</p>
            </a>
        
            <a href="/listings/filter?category=pool" class="filter">
                <i class="fa-solid fa-person-swimming"></i>
                <p>Amazing Pools</p>
            </a>
        
            <a href="/listings/filter?category=camping" class="filter">
                <i class="fa-solid fa-campground"></i>
                <p>Camping</p>
            </a>
        
            <a href="/listings/filter?category=treehouse" class="filter">
                <i class="fa-solid fa-tree"></i>              
                  <p>Tree-house</p>
            </a>
        
            <a href="/listings/filter?category=arctic" class="filter">
                <i class="fa-solid fa-snowflake"></i>
                <p>Arctic</p>
            </a>
        
            <a href="/listings/filter?category=boat" class="filter">
                <div><i class="fa-solid fa-ship"></i></div>
                <p>Boats</p>
            </a>
        
        
         
         <div class="tax-toggle"> 
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes   </label>
              </div>
         </div> 
    </div>

    <div class="row   row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <%   for(let listing of allListings){ %>

            <a  class="listing-link" href="/listings/<%= listing._id  %> " >
            <div class="card col listing-card" >
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem"/>

                <div class="card-img-overlay"></div>
                
                <div class="card-body">
                  <p class="card-text">
                 <b>   <%=listing.title %></b><br>
                 &#8377; <%=listing.price.toLocaleString("en-IN") %> /night <br> 
                 <i class="tax-info"> &nbsp;&nbsp;&nbsp;&nbsp;  +18% GST</i>
                </p>
                </div>
              </div>
              </a>

              <% } %>
        
    </div>


    

<!-- conatins tax-toggle button logic -->

