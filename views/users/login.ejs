<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
                 
                
    <div class="col-6 offset-3">
        <h1>Login </h1><br>
        <form action="/login" method="POST" class="needs-validation" novalidate>

            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username"  class="form-control" type="text" id="username"  autocomplete="off"required>
        
            </div>
            

            
            <div class="mb-3">
                <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" class="form-control pr-4" type="password" id="password"  autocomplete="off"required>
                    <i class="fas fa-eye eye-icon" id="eyeIcon"></i>
                </div>
                
            </div>

            
          
            <button class="btn btn-success">Login</button>

        </form>

      </div>  

 </div>     

<!-- contains eye toggle logic -->
 <script src="/javascript/password-eye-toggle.js"></script>