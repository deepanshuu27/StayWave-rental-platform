<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-6 offset-3">
    <h1>Verify OTP</h1>
    <form action="/verify-otp" method="POST"><br><br>
      <div class="mb-3">
        <label for="otp" class="form-label">Enter OTP</label>
